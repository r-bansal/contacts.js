<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css"/>
  <link rel="stylesheet" href="/stylesheets/application.css"/>
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
  <script src="/javascript/mustache.min.js"></script>
  <script src="/javascript/application.js"></script>

  <title>Contacts.js</title>
</head>
<body>
  <div class="navbar-fixed">
    <nav class="big-nav">
      <div class="nav-wrapper valign-wrapper">
        <a href="#!" class="brand-logo center valign">Contacts.js</a>
      </div>
    </nav>
  </div>
  <%= yield %>
  <div id="add-back" class="form-box-back hidden">
    <div class="form-box">
      <div class="card-panel z-depth-5">
        <h5 class="center">Add Contact</h5>
        <form id="create_form">
          <div class="row push-down-30 row-padding">
            <div class="input-field col s10 offset-s1 m6">
              <input id="first_name" type="text" class="validate" required="" minlength="2">
              <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s10 offset-s1 m6">
              <input id="last_name" type="text" class="validate" required="" minlength="2">
              <label for="last_name">Last Name</label>
            </div>
            <div class="input-field col s10 offset-s1 m12">
              <input id="email" type="email" class="validate" required="">
              <label for="email">email</label>
            </div>
            <div id="create-numbers">

            </div>
            <div class="center">
              <a href="#" class="create-add-button">add number</a>
            </div>
            <!-- <div class="input-field col s5 m3">
              <input id="phone_number_name_1" type="text" class="validate">
              <label for="phone_number_name_1">Type</label>
            </div>
            <div class="input-field col s7 m9">
              <input id="phone_number_1" type="text" class="validate">
              <label for="phone_number_1">Phone Number</label>
            </div> -->
            <div class="center push-down-30">
              <button id="add-cancel" class="btn red darken-3 waves-effect waves-light">cancel</button>
              <button class="btn light-blue darken-3 waves-effect waves-light">Add contact</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div id="edit-back" class="form-box-back hidden">
    <div class="form-box">
      <div class="card-panel z-depth-5">
        <h5 class="center">Edit Contact</h5>
        <form id="edit_form">
          <input id="id" type="hidden">
          <div class="row push-down-30 row-padding">
            <div class="input-field col s10 offset-s1 m6">
              <input id="first_name" type="text" class="validate" required="" minlength="2">
              <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s10 offset-s1 m6">
              <input id="last_name" type="text" class="validate" required="" minlength="2">
              <label for="last_name">Last Name</label>
            </div>
            <div class="input-field col s10 offset-s1 m12">
              <input id="email" type="email" class="validate" required="">
              <label for="email">email</label>
            </div>
            <div id="create-numbers">

            </div>
            <div class="center">
              <a href="#" class="edit-add-button">add number</a>
            </div>
            <div class="center push-down-30">
              <button id="edit-cancel" class="btn red darken-3 waves-effect waves-light">cancel</button>
              <button id="" class="btn light-blue darken-3 waves-effect waves-light">save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <a id="toggle-add" class="btn-floating btn-large waves-effect waves-light light-blue darken-2 float-bottom-right"><i class="material-icons">add</i></a>
</body>
</html>
